<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="Thmd.Controls.TextAnimation" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:Thmd.Controls">
  <FrameworkElement.Resources>
    <ResourceDictionary>
      <Style x:Key="{x:Type Button}" TargetType="{x:Type Button}">
        <Setter Property="Background" Value="#FFFFFFFF" />
        <Setter Property="BorderBrush" Value="#FF800080" />
        <Setter Property="BorderThickness" Value="3" />
        <Setter Property="Foreground" Value="#FF800080" />
        <Setter Property="Template">
          <Setter.Value>
            <ControlTemplate TargetType="{x:Type Button}">
              <Border Background="{TemplateBinding Control.Background}" BorderBrush="{TemplateBinding Control.BorderBrush}" BorderThickness="{TemplateBinding Control.BorderThickness}" CornerRadius="5">
                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
              </Border>
            </ControlTemplate>
          </Setter.Value>
        </Setter>
        <Style.Triggers>
          <Trigger Property="UIElement.IsMouseOver" Value="True">
            <TriggerBase.EnterActions>
              <BeginStoryboard>
                <Storyboard>
                  <DoubleAnimation Storyboard.TargetProperty="Width" To="130" Duration="0:0:0.3" />
                  <DoubleAnimation Storyboard.TargetProperty="Height" To="150" Duration="0:0:0.3" />
                </Storyboard>
              </BeginStoryboard>
            </TriggerBase.EnterActions>
            <TriggerBase.ExitActions>
              <BeginStoryboard>
                <Storyboard>
                  <DoubleAnimation Storyboard.TargetProperty="Width" To="100" Duration="0:0:0.3" />
                  <DoubleAnimation Storyboard.TargetProperty="Height" To="120" Duration="0:0:0.3" />
                </Storyboard>
              </BeginStoryboard>
            </TriggerBase.ExitActions>
          </Trigger>
        </Style.Triggers>
      </Style>
    </ResourceDictionary>
  </FrameworkElement.Resources>
  <Grid Background="#f1f3f5">
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
      <Button Height="120" Background="#FFFFFFFF" Width="100" Margin="3" FontSize="18" FontWeight="Bold" Content="Mon" />
      <Button Height="120" Background="#FFFFFFFF" Width="100" Margin="3" FontSize="18" FontWeight="Bold" Content="Tue" />
      <Button Height="120" Background="#FFFFFFFF" Width="100" Margin="3" FontSize="18" FontWeight="Bold" Content="Wed" />
      <Button Height="120" Background="#FFFFFFFF" Width="100" Margin="3" FontSize="18" FontWeight="Bold" Content="Thu" />
      <Button Height="120" Background="#FFFFFFFF" Width="100" Margin="3" FontSize="18" FontWeight="Bold" Content="Fri" />
    </StackPanel>
  </Grid>
</UserControl>