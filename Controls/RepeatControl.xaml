<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="Thmd.Controls.RepeatControl" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:Thmd.Controls">
  <FrameworkElement.Resources>
    <ResourceDictionary />
  </FrameworkElement.Resources>
    <Grid>
        <TextBlock 
                   x:Name="_repeatTextBlock"
                   Text="None" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center" 
                   FontSize="16" 
                   FontWeight="Bold"
                   MouseDown="RepeatTextBlock_Click" Width="80">
            <TextBlock.Foreground>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1" >
                    <GradientStopCollection>
                        <GradientStop Color="Yellow" Offset="0" />
                        <GradientStop Color="OrangeRed" Offset="0.5" />
                        <GradientStop Color="Yellow" Offset="1" />
                    </GradientStopCollection>
                </LinearGradientBrush>
            </TextBlock.Foreground>
        </TextBlock>
    </Grid>
</UserControl>