<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="Thmd.Controls.RepeatControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Thmd.Controls">
    <FrameworkElement.Resources>
        <ResourceDictionary />
    </FrameworkElement.Resources>
    <Grid Background="Transparent">
        <DockPanel>
            <CheckBox 
                x:Name="_enableShuffleCheckBox"
                Height="17" 
                Margin="0,0,0,0"
                IsChecked="False"
                Content="Shuffle | "
                FontSize="14">
                <TextBlock.Foreground>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,0.5">
                        <GradientStopCollection>
                            <GradientStop Color="Yellow" Offset="0" />
                            <GradientStop Color="OrangeRed" Offset="0.5" />
                            <GradientStop Color="Yellow" Offset="1" />
                        </GradientStopCollection>
                    </LinearGradientBrush>
                </TextBlock.Foreground>
            </CheckBox>
            <TextBlock
                x:Name="_repeatLabelTextBlock"
                HorizontalAlignment="Right" 
                VerticalAlignment="Center" 
                FontSize="14" 
                FontWeight="Bold"
                Text="Repeat:">
                <TextBlock.Foreground>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,2">
                        <GradientStopCollection>
                            <GradientStop Color="Yellow" Offset="0" />
                            <GradientStop Color="OrangeRed" Offset="0.5" />
                            <GradientStop Color="Yellow" Offset="1" />
                        </GradientStopCollection>
                    </LinearGradientBrush>
                </TextBlock.Foreground>
            </TextBlock>
            <TextBlock 
                x:Name="_repeatTextBlock"
                HorizontalAlignment="Left" 
                VerticalAlignment="Center" 
                FontSize="14" 
                FontWeight="Bold"
                Text="None">
                <TextBlock.Foreground>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStopCollection>
                            <GradientStop Color="Yellow" Offset="0" />
                            <GradientStop Color="OrangeRed" Offset="0.5" />
                            <GradientStop Color="Yellow" Offset="1" />
                        </GradientStopCollection>
                    </LinearGradientBrush>
                </TextBlock.Foreground>
            </TextBlock>
        </DockPanel>
    </Grid>
</UserControl>