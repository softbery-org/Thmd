<UserControl 
    x:Class="Thmd.Controls.SubtitleControl" 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:Thmd.Controls">
    <Grid>
        <TextBlock x:Name="_subtitleTextBlock" 
                   Text="{Binding SubtitleText}"
                   FontSize="{Binding SubtitleFontSize}" 
                   Foreground="{Binding SubtitleBrush}" 
                   FontFamily="{Binding SubtitleFontFamily}" 
                   TextAlignment="Center" 
                   VerticalAlignment="Bottom">
            <UIElement.Effect>
                <DropShadowEffect />
            </UIElement.Effect>
        </TextBlock>
    </Grid>
</UserControl>