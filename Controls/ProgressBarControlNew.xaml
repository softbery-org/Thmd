<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="Thmd.Controls.ProgressBarControlNew" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:Thmd.Controls">
  <FrameworkElement.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Thmd;component/Thmd.Templates.ProgressBarTheme.xaml" />
      </ResourceDictionary.MergedDictionaries>
      <Storyboard x:Key="fadeOutProgressBar" FillBehavior="HoldEnd">
        <DoubleAnimation Storyboard.TargetName="_grid" Storyboard.TargetProperty="(Opacity)" To="0.0" Duration="0:0:3" />
      </Storyboard>
      <Storyboard x:Key="fadeInProgressBar" FillBehavior="HoldEnd">
        <DoubleAnimation Storyboard.TargetName="_grid" Storyboard.TargetProperty="(Opacity)" To="1.0" Duration="0:0:2" />
      </Storyboard>
    </ResourceDictionary>
  </FrameworkElement.Resources>
  <Grid Name="_grid">
    <Popup Name="_popup" AllowsTransparency="True" Placement="Relative" OpacityMask="#FF000000" PopupAnimation="Fade" PlacementTarget="{Binding ElementName=_progressBar}">
      <Border BorderThickness="1">
        <StackPanel Margin="10">
          <TextBlock Name="_popuptext" Foreground="#FFF" FontSize="14" FontWeight="ExtraBold" Text="00:00:00" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center">
            <UIElement.Effect>
              <DropShadowEffect Color="Red" />
            </UIElement.Effect>
          </TextBlock>
        </StackPanel>
      </Border>
    </Popup>
    <ProgressBar Name="_progressBar" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Style="{StaticResource ProgressBarStyle}" />
    <Grid Name="_progressBarGrid" Background="#FFFFFFFF">
      <Rectangle Name="_rectangleBuffor" Fill="#FFFF0000" Width="350" HorizontalAlignment="Left" />
      <Rectangle Name="_rectangleBackground" Fill="#FFFFFF00" Width="250" HorizontalAlignment="Left" />
      <Rectangle Name="_rectangleValue" Fill="#FFFF8C00" Width="750" HorizontalAlignment="Left" />
    </Grid>
    <TextBlock Text="00:00:00 - 00:00:00" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="28" Style="{StaticResource TextBlockStyle}" />
    <Rectangle Name="_rectalgleMousePoint" Fill="#FFFF0000" HorizontalAlignment="Left" Width="15" Margin="650,0" />
  </Grid>
</UserControl>