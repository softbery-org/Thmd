<UserControl x:Class="Thmd.Controls.TimerBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Thmd.Controls"
             mc:Ignorable="d" 
             Height="auto"
             Width="auto">
    <Grid>
        <TextBlock x:Name="_timerTextBlock" HorizontalAlignment="Right" FontWeight="Bold" Margin="0,0,0,0" TextWrapping="Wrap" Text="00:00:00" VerticalAlignment="Top" FontSize="46" Foreground="Green">
            <TextBlock.Effect>
                <DropShadowEffect Color="White" Direction="30" Opacity="1" RenderingBias="Performance" ShadowDepth="3" BlurRadius="3"/>
            </TextBlock.Effect>
        </TextBlock>
    </Grid>
</UserControl>
