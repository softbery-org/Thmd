<UserControl x:Class="Thmd.Controls.ControlButtons.PlayerCloseButtonControl" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Thmd.Controls.ControlButtons">
  <FrameworkElement.Resources>
    <ResourceDictionary>
      <LinearGradientBrush x:Key="OrangeYellowGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="Yellow" Offset="0" />
        <GradientStop Color="#ff4100" Offset="0.5" />
        <GradientStop Color="Yellow" Offset="1" />
      </LinearGradientBrush>
      <Style x:Key="Close" TargetType="{x:Type Button}">
        <Setter Property="Foreground" Value="#FFF" />
        <Setter Property="FontSize" Value="24" />
        <Setter Property="BorderThickness" Value="3" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="FrameworkElement.Cursor" Value="Hand" />
        <Setter Property="Template">
          <Setter.Value>
            <ControlTemplate TargetType="{x:Type Button}">
              <FrameworkTemplate.Resources>
                <ResourceDictionary>
                  <DrawingGroup x:Key="cros" ClipGeometry="M0,0 L0,12 L12,12 L12,0 L0,0">
                    <GeometryDrawing Geometry="F1 M12,12 M0,0 M2.22,2.22 A0.749,0.749 0 0 1 3.28,2.22L6,4.939 L8.72,2.22 A0.749,0.749 0 1 1 9.78,3.28L7.061,6 L9.78,8.72 A0.749,0.749 0 1 1 8.72,9.78L6,7.061 L3.28,9.78 A0.749,0.749 0 1 1 2.22,8.72L4.939,6 L2.22,3.28 A0.749,0.749 0 0 1 2.22,2.22" Brush="{StaticResource OrangeYellowGradient}" />
                  </DrawingGroup>
                </ResourceDictionary>
              </FrameworkTemplate.Resources>
              <ControlTemplate.Triggers>
                <Trigger Property="UIElement.IsMouseOver" Value="True">
                  <TriggerBase.EnterActions>
                    <BeginStoryboard>
                      <Storyboard>
                        <DoubleAnimation Storyboard.TargetProperty="Width" To="40" Duration="0:0:0.3" />
                        <DoubleAnimation Storyboard.TargetProperty="Height" To="40" Duration="0:0:0.3" />
                      </Storyboard>
                    </BeginStoryboard>
                  </TriggerBase.EnterActions>
                  <TriggerBase.ExitActions>
                    <BeginStoryboard>
                      <Storyboard>
                        <DoubleAnimation Storyboard.TargetProperty="Width" To="25" Duration="0:0:0.3" />
                        <DoubleAnimation Storyboard.TargetProperty="Height" To="25" Duration="0:0:0.3" />
                      </Storyboard>
                    </BeginStoryboard>
                  </TriggerBase.ExitActions>
                </Trigger>
              </ControlTemplate.Triggers>
              <Grid Width="{TemplateBinding FrameworkElement.Width}" 
                    Height="{TemplateBinding FrameworkElement.Height}" 
                    ClipToBounds="True">
                <Rectangle Name="_outerRectangle" 
                           HorizontalAlignment="Stretch" 
                           VerticalAlignment="Stretch" 
                           RadiusX="10" 
                           RadiusY="10" 
                           StrokeThickness="5" 
                           Fill="#00FFFFFF" 
                           Stroke="{StaticResource OrangeYellowGradient}" />
                <Border Name="_myIcon">
                  <Image>
                    <Image.Source>
                      <DrawingImage Drawing="{StaticResource cros}" />
                    </Image.Source>
                  </Image>
                </Border>
              </Grid>
            </ControlTemplate>
          </Setter.Value>
        </Setter>
      </Style>
    </ResourceDictionary>
  </FrameworkElement.Resources>
  <Button Name="_btnClose" 
          Content="{StaticResource Close}" 
          Style="{StaticResource Close}" 
          Width="25" 
          Height="25"/>
</UserControl>