<UserControl x:Class="Thmd.Controls.LogoImage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Thmd.Controls"
             xmlns:effect="clr-namespace:Thmd.Controls.Effects"
             mc:Ignorable="d" 
             d:DesignHeight="75" d:DesignWidth="105">
    <Grid HorizontalAlignment="Right" VerticalAlignment="Center">
        <!--<Image Source="/Thmd;component/Controls/Effects/Image/green_lava.png" HorizontalAlignment="Center" VerticalAlignment="Center"/>-->
        <effect:BeatsEffect x:Name="_beatsEffect"
                BackgroundImageSource="/Thmd;component/Controls/Effects/Image/green_lava.png"
                ImageSource="/Thmd;component/Controls/Effects/Image/alien_skeleton.png" VerticalAlignment="Top" HorizontalAlignment="Right"
                Margin="0,-1,-25,0"/>
        <DockPanel>
            <!--<Image Source="/Thmd;component/Controls/Effects/Image/alien_skeleton.png" VerticalAlignment="Center"/>-->
            <Grid>
                <TextBlock Text="TV" FontWeight="ExtraBold" Foreground="DarkOrange" FontSize="48">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="White" Direction="30" Opacity="1" RenderingBias="Performance" ShadowDepth="3" BlurRadius="3"/>
                    </TextBlock.Effect>
                </TextBlock>
                <TextBlock Text="Softbery" FontWeight="Bold" HorizontalAlignment="Right" VerticalAlignment="Bottom" TextWrapping="Wrap" TextAlignment="Right" FontSize="24" Width="106">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="White" Direction="30" Opacity="1" RenderingBias="Performance" ShadowDepth="3" BlurRadius="3"/>
                    </TextBlock.Effect>
                </TextBlock>
            </Grid>
        </DockPanel>
    </Grid>
</UserControl>
