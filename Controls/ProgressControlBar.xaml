<UserControl x:Class="Thmd.Controls.ProgressControlBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Thmd.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="800">
    <UserControl.Resources>
        <!-- Define colors -->
        <SolidColorBrush x:Key="DarkOrangeBrush" Color="#D35400"/>
        <SolidColorBrush x:Key="DarkBackgroundBrush" Color="#1F1F1F"/>
        <SolidColorBrush x:Key="HoverBrush" Color="#FFA500"/>
        <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="#2F2F2F"/>

        <!-- Button style -->
        <Style x:Key="ControlButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource ButtonBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource DarkOrangeBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource DarkOrangeBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource HoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{StaticResource DarkOrangeBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid Background="#7F000000">
        <local:ProgressBarView HorizontalAlignment="Stretch" VerticalAlignment="Top"/>
        <DockPanel HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,35,0,0">
            <Button Style="{StaticResource ControlButtonStyle}" Content="⏮" DockPanel.Dock="Left"/>
            <Button Style="{StaticResource ControlButtonStyle}" Content="⏮" DockPanel.Dock="Left"/>
            <Button Style="{StaticResource ControlButtonStyle}" Content="⏮" DockPanel.Dock="Left"/>
        </DockPanel>
        <DockPanel HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,35,10,0">
            <Button Style="{StaticResource ControlButtonStyle}" Content="⏭" DockPanel.Dock="Right"/>
            <Button Style="{StaticResource ControlButtonStyle}" Content="⏭" DockPanel.Dock="Right"/>
        </DockPanel>
    </Grid>
</UserControl>
