<UserControl x:Class="Thmd.Controls.Player"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vlc="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF"
             xmlns:local="clr-namespace:Thmd.Controls"
             Width="800" Height="450">
        <vlc:VideoView x:Name="_player" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Black">
            <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                <local:SubtitleControl x:Name="_subtitle" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" VerticalContentAlignment="Bottom" HorizontalContentAlignment="Center" Margin="0,0,0,30"/>
                <local:Playlist x:Name="_playlist" Width="400" Height="250"  HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <local:ControlBar x:Name="_controlBar" Width="400" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <local:ProgressBarView x:Name="_progressBar" Width="800" Height="30" ProgressText="00:00:00" VerticalAlignment="Bottom" HorizontalAlignment="Stretch"/>
            </Grid>
        </vlc:VideoView>
</UserControl>