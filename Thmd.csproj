<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">
  <PropertyGroup>
    <AssemblyName>Thmd</AssemblyName>
    <GenerateAssemblyInfo>False</GenerateAssemblyInfo>
    <UseWPF>True</UseWPF>
    <TargetFramework>net481</TargetFramework>
    <UserSecretsId>771edeb9-cfdd-42c5-8fa0-87dc8923a9ef</UserSecretsId>
  </PropertyGroup>
  <PropertyGroup>
    <LangVersion>12.0</LangVersion>
    <AllowUnsafeBlocks>True</AllowUnsafeBlocks>
    <GenerateDocumentationFile>True</GenerateDocumentationFile>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <Optimize>True</Optimize>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="MediaToolkit" Version="1.1.0.1" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
    <PackageReference Include="Vlc.DotNet.Core" Version="3.1.0" />
    <PackageReference Include="Vlc.DotNet.Wpf" Version="3.1.0" />
  </ItemGroup>
  <ItemGroup>
    <Reference Include="MediaToolkit">
      <HintPath>bin\Debug\MediaToolkit.dll</HintPath>
      <Private>True</Private>
    </Reference>
    <Reference Include="WindowsBase" />
    <Reference Include="System.Net.Http" />
    <Reference Include="PresentationCore" />
    <Reference Include="System.Xml" />
    <Reference Include="System.Core" />
    <Reference Include="Vlc.DotNet.Wpf">
      <HintPath>bin\Debug\Vlc.DotNet.Wpf.dll</HintPath>
    </Reference>
    <Reference Include="Vlc.DotNet.Core">
      <HintPath>bin\Debug\Vlc.DotNet.Core.dll</HintPath>
    </Reference>
    <Reference Include="Newtonsoft.Json">
      <HintPath>bin\Debug\Newtonsoft.Json.dll</HintPath>
      <Private>True</Private>
    </Reference>
    <Reference Include="XamlBuildTask" />
  </ItemGroup>
  <ItemGroup>
    <Compile Update="Thmd.Templates\Buttons.cs">
      <Generator>MSBuild:Compile</Generator>
    </Compile>
    <Compile Update="Thmd.Templates\PlayerMainButtons.cs">
      <Generator>MSBuild:Compile</Generator>
    </Compile>
    <Compile Update="Thmd.Templates\PlayerSecondButtons.cs">
      <Generator>MSBuild:Compile</Generator>
    </Compile>
  </ItemGroup>
  <Target Name="UpdateAssemblyVersion" BeforeTargets="BeforeBuild">
    <Message Importance="high" Text="PostBuild: $(TargetPath)" />
    <Message Importance="high" Text="PostBuild: $(TargetDir)" />
    <Message Importance="high" Text="PostBuild: $(TargetName)" />
    <Message Importance="high" Text="PostBuild: $(TargetFrameworkVersion)" />
    <Message Importance="high" Text="PostBuild: $(TargetFramework)" />
    <Exec Command="..\..\.softbery\bin\Debug\net9.0\softbery.exe" />
  </Target>
</Project>