<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary x:Class="Thmd.Templates.RepeatButton" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:templates="clr-namespace:Thmd.Templates;assembly=Thmd">
  <LinearGradientBrush x:Key="OrangeYellowGradient" StartPoint="0,0" EndPoint="1,1">
    <GradientStop Color="Yellow" Offset="0" />
    <GradientStop Color="#ff4100" Offset="0.5" />
    <GradientStop Color="Yellow" Offset="1" />
  </LinearGradientBrush>
  <Style x:Key="ButtonStyle" TargetType="{x:Type Button}">
    <Setter Property="Background" Value="{StaticResource OrangeYellowGradient}" />
    <Setter Property="Width" Value="100" />
    <Setter Property="Height" Value="75" />
    <Setter Property="Margin" Value="0" />
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type Button}">
          <Grid Width="{TemplateBinding FrameworkElement.Width}" Height="{TemplateBinding FrameworkElement.Height}" ClipToBounds="True">
            <Rectangle Name="outerRectangle" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" RadiusX="20" RadiusY="20" StrokeThickness="5" Fill="#00FFFFFF" Stroke="{StaticResource OrangeYellowGradient}" />
            <Rectangle Name="innerRectangle" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Stroke="#00FFFFFF" StrokeThickness="20" RadiusX="20" RadiusY="20" Fill="{StaticResource OrangeYellowGradient}" />
            <DockPanel Name="myContentPresenterDockPanel" Background="#00FFFFFF">
              <ContentPresenter Name="myContentPresenter" Content="{TemplateBinding ContentControl.Content}" TextBlock.FontWeight="ExtraBold" Margin="0,0,0,0" TextBlock.Foreground="#FF000000" TextBlock.FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" />
            </DockPanel>
          </Grid>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
    <Style.Triggers>
      <Trigger Property="UIElement.IsMouseOver" Value="True">
        <Setter Property="Background" Value="{StaticResource OrangeYellowGradient}" />
        <TriggerBase.EnterActions>
          <BeginStoryboard>
            <Storyboard>
              <DoubleAnimation Storyboard.TargetProperty="Width" To="130" Duration="0:0:0.3" />
              <DoubleAnimation Storyboard.TargetProperty="Height" To="100" Duration="0:0:0.3" />
            </Storyboard>
          </BeginStoryboard>
        </TriggerBase.EnterActions>
        <TriggerBase.ExitActions>
          <BeginStoryboard>
            <Storyboard>
              <DoubleAnimation Storyboard.TargetProperty="Width" To="100" Duration="0:0:0.3" />
              <DoubleAnimation Storyboard.TargetProperty="Height" To="75" Duration="0:0:0.3" />
            </Storyboard>
          </BeginStoryboard>
        </TriggerBase.ExitActions>
      </Trigger>
    </Style.Triggers>
  </Style>
  <Style x:Key="Repeat" TargetType="{x:Type Button}">
    <Setter Property="Foreground" Value="#FFFFFFFF" />
    <Setter Property="FontSize" Value="24" />
    <Setter Property="BorderThickness" Value="3" />
    <Setter Property="Padding" Value="10" />
    <Setter Property="FrameworkElement.Cursor" Value="Hand" />
    <Setter Property="Width" Value="100" />
    <Setter Property="Height" Value="75" />
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type Button}">
          <FrameworkTemplate.Resources>
            <ResourceDictionary>
              <DrawingGroup x:Key="repeat" ClipGeometry="M0,0 L0,16 L16,16 L16,0 L0,0">
                <DrawingGroup.Transform>
                  <TranslateTransform X="0.0002499949187040329" Y="0" />
                </DrawingGroup.Transform>
                <DrawingGroup Opacity="1">
                  <DrawingGroup Opacity="1">
                    <GeometryDrawing Geometry="F1 M16,16 M0,0 M4.293,9.708 L5.707,8.294 L3.414,6.001 L12,6.001 C13.103,6.001 14,6.898 14,8.001 L16,8.001 C16,5.795 14.206,4.001 12,4.001 L3.414,4.001 L5.707,1.708 L4.293,0.294 L0.293,4.294 C-0.0979999999999999,4.685 -0.0979999999999999,5.317 0.293,5.708 L4.293,9.708" Brush="{StaticResource OrangeYellowGradient}" />
                    <GeometryDrawing Geometry="F1 M16,16 M0,0 M11.708,6.294 L10.292,7.707 L12.581,10.001 L4,10.001 C2.897,10.001 2,9.104 2,8.001 L0,8.001 C0,10.207 1.794,12.001 4,12.001 L12.581,12.001 L10.292,14.294 L11.708,15.707 L15.7,11.707 C16.089,11.316 16.089,10.685 15.7,10.294 L11.708,6.294" Brush="{StaticResource OrangeYellowGradient}" />
                  </DrawingGroup>
                </DrawingGroup>
              </DrawingGroup>
            </ResourceDictionary>
          </FrameworkTemplate.Resources>
          <ControlTemplate.Triggers>
            <Trigger Property="UIElement.IsMouseOver" Value="True">
              <TriggerBase.EnterActions>
                <BeginStoryboard>
                  <Storyboard>
                    <DoubleAnimation Storyboard.TargetProperty="Width" To="130" Duration="0:0:0.3" />
                    <DoubleAnimation Storyboard.TargetProperty="Height" To="100" Duration="0:0:0.3" />
                  </Storyboard>
                </BeginStoryboard>
              </TriggerBase.EnterActions>
              <TriggerBase.ExitActions>
                <BeginStoryboard>
                  <Storyboard>
                    <DoubleAnimation Storyboard.TargetProperty="Width" To="100" Duration="0:0:0.3" />
                    <DoubleAnimation Storyboard.TargetProperty="Height" To="75" Duration="0:0:0.3" />
                  </Storyboard>
                </BeginStoryboard>
              </TriggerBase.ExitActions>
            </Trigger>
          </ControlTemplate.Triggers>
          <Grid Width="{TemplateBinding FrameworkElement.Width}" Height="{TemplateBinding FrameworkElement.Height}" ClipToBounds="True">
            <Rectangle Name="outerRectangle" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" RadiusX="10" RadiusY="10" StrokeThickness="5" Fill="#00FFFFFF" Stroke="{StaticResource OrangeYellowGradient}" />
            <Border Name="myIcon">
              <Image>
                <Image.Source>
                  <DrawingImage Drawing="{StaticResource repeat}" />
                </Image.Source>
              </Image>
            </Border>
          </Grid>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>