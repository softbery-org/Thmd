<UserControl x:Class="Thmd.Views.ControlBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Thmd.Views"
             mc:Ignorable="d" 
             d:DesignWidth="680" 
             MaxWidth="680" 
             MaxHeight="165"  
             HorizontalContentAlignment="Stretch" 
             VerticalContentAlignment="Stretch" 
             Height="105">
    <UserControl.Resources>
        <!-- Define colors -->
        <SolidColorBrush x:Key="DarkOrangeBrush" Color="#D35400"/>
        <SolidColorBrush x:Key="DarkBackgroundBrush" Color="#1F1F1F"/>
        <SolidColorBrush x:Key="HoverBrush" Color="#FFA500"/>
        <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="#2F2F2F"/>

        <!-- Button style -->
        <Style x:Key="ControlButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource ButtonBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource DarkOrangeBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource DarkOrangeBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource HoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{StaticResource DarkOrangeBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Slider style -->
        <Style x:Key="VolumeSliderStyle" TargetType="local:ProgressBarView">
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="local:ProgressBarView">
                        <Grid>
                            <Border Background="{StaticResource DarkBackgroundBrush}"
                                    BorderBrush="{StaticResource DarkOrangeBrush}"
                                    BorderThickness="1"
                                    CornerRadius="5"/>
                            <Track x:Name="PART_Track">
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Template>
                                            <ControlTemplate>
                                                <Ellipse Width="12" Height="12" Fill="{StaticResource DarkOrangeBrush}"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton>
                                        <RepeatButton.Template>
                                            <ControlTemplate>
                                                <Rectangle Fill="{StaticResource DarkOrangeBrush}"/>
                                            </ControlTemplate>
                                        </RepeatButton.Template>
                                    </RepeatButton>
                                </Track.IncreaseRepeatButton>
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton>
                                        <RepeatButton.Template>
                                            <ControlTemplate>
                                                <Rectangle Fill="{StaticResource DarkBackgroundBrush}"/>
                                            </ControlTemplate>
                                        </RepeatButton.Template>
                                    </RepeatButton>
                                </Track.DecreaseRepeatButton>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Equalizer slider style -->
        <Style x:Key="EqualizerSliderStyle" TargetType="Slider">
            <Setter Property="Minimum" Value="-12"/>
            <Setter Property="Maximum" Value="12"/>
            <Setter Property="Value" Value="0"/>
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="100"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Orientation" Value="Vertical"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid>
                            <Border Background="{StaticResource DarkBackgroundBrush}"
                                    BorderBrush="{StaticResource DarkOrangeBrush}"
                                    BorderThickness="1"
                                    CornerRadius="3"/>
                            <Track x:Name="PART_Track">
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Template>
                                            <ControlTemplate>
                                                <Ellipse Width="12" Height="12" Fill="{StaticResource DarkOrangeBrush}"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton>
                                        <RepeatButton.Template>
                                            <ControlTemplate>
                                                <Rectangle Fill="{StaticResource DarkOrangeBrush}"/>
                                            </ControlTemplate>
                                        </RepeatButton.Template>
                                    </RepeatButton>
                                </Track.IncreaseRepeatButton>
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton>
                                        <RepeatButton.Template>
                                            <ControlTemplate>
                                                <Rectangle Fill="{StaticResource DarkBackgroundBrush}"/>
                                            </ControlTemplate>
                                        </RepeatButton.Template>
                                    </RepeatButton>
                                </Track.DecreaseRepeatButton>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Popup text style -->
        <Style x:Key="PopupTextStyle" TargetType="TextBlock">
            <Setter Property="Background" Value="{StaticResource DarkBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource DarkOrangeBrush}"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" ShadowDepth="2" BlurRadius="5"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Media title style -->
        <Style x:Key="MediaTitleStyle" TargetType="TextBlock" BasedOn="{StaticResource PopupTextStyle}">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="MaxWidth" Value="500"/>
        </Style>

        <!-- Timer style -->
        <Style x:Key="TimerStyle" TargetType="TextBlock" BasedOn="{StaticResource PopupTextStyle}">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <!-- Playlist item style -->
        <Style x:Key="PlaylistItemStyle" TargetType="ListBoxItem">
            <Setter Property="Background" Value="{StaticResource ButtonBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource DarkOrangeBrush}"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{StaticResource DarkOrangeBrush}"
                                BorderThickness="1"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource HoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{StaticResource DarkOrangeBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBox style for repeat modes -->
        <Style x:Key="RepeatComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="{StaticResource DarkBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource DarkOrangeBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource DarkOrangeBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="5">
                                <Grid>
                                    <ToggleButton x:Name="ToggleButton"
                                                  Background="{TemplateBinding Background}"
                                                  BorderBrush="{TemplateBinding BorderBrush}"
                                                  BorderThickness="{TemplateBinding BorderThickness}"
                                                  IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"/>
                                    <ContentPresenter x:Name="ContentPresenter"
                                                     Content="{TemplateBinding SelectionBoxItem}"
                                                     HorizontalAlignment="Left"
                                                     VerticalAlignment="Center"
                                                     Margin="5,0,0,0"/>
                                    <Popup x:Name="PART_Popup"
                                           IsOpen="{Binding IsChecked, ElementName=ToggleButton}"
                                           Placement="Bottom"
                                           AllowsTransparency="True">
                                        <Border Background="{StaticResource DarkBackgroundBrush}"
                                                BorderBrush="{StaticResource DarkOrangeBrush}"
                                                BorderThickness="1"
                                                CornerRadius="5">
                                            <ScrollViewer>
                                                <ItemsPresenter/>
                                            </ScrollViewer>
                                        </Border>
                                    </Popup>
                                </Grid>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource HoverBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Storyboard -->
        <Storyboard x:Key="fadeOutControlBar" FillBehavior="HoldEnd">
            <DoubleAnimation Storyboard.TargetName="_grid" Storyboard.TargetProperty="Opacity" To="0.0" Duration="0:0:2" />
        </Storyboard>
        <Storyboard x:Key="fadeInControlBar" FillBehavior="HoldEnd">
            <DoubleAnimation Storyboard.TargetName="_grid" Storyboard.TargetProperty="Opacity" To="1.0" Duration="0:0:4" />
        </Storyboard>
    </UserControl.Resources>
    <UserControl.FocusVisualStyle>
        <Style/>
    </UserControl.FocusVisualStyle>

    <Grid x:Name="_grid"  Background="{StaticResource DarkBackgroundBrush}" VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0.5*"/>
        </Grid.ColumnDefinitions>
        <!-- Media Title -->
        <TextBlock x:Name="_mediaTitleTextBlock" 
                   Grid.Row="0"
                   Grid.Column="0"
                   HorizontalAlignment="Left"
                   Margin="10,0"
                   Text="{Binding MediaTitle, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                   Style="{StaticResource MediaTitleStyle}"
                   ToolTip="{Binding MediaTitle, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
        <!-- Media Timer and Duration -->
        <StackPanel Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <TextBlock x:Name="_positionTextBlock" 
                       Text="{Binding Position, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                       Style="{StaticResource TimerStyle}"/>
            <TextBlock Text="/" Style="{StaticResource TimerStyle}"/>
            <TextBlock x:Name="_durationTextBlock" 
                       Text="{Binding Duration, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                       Style="{StaticResource TimerStyle}"/>
        </StackPanel>
        <!-- Control Buttons -->
        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- Open Media Button -->
            <Button x:Name="_openMediaButton" Content="📂" Style="{StaticResource ControlButtonStyle}" ToolTip="Open Media"/>
            <!-- Stream Button -->
            <Button x:Name="_streamButton" Content="🌐" Style="{StaticResource ControlButtonStyle}" ToolTip="Open Stream"/>
            <!-- Open Subtitles Button -->
            <Button x:Name="_openSubtitlesButton" Content="📜" Style="{StaticResource ControlButtonStyle}" ToolTip="Open Subtitles"/>
            <!-- Open Playlist Button -->
            <Button x:Name="_openPlaylistButton" Content="📃" Style="{StaticResource ControlButtonStyle}" ToolTip="Open Playlist"/>
            <!-- Rewind Button -->
            <Button x:Name="_rewindButton" Content="⏪" Style="{StaticResource ControlButtonStyle}" ToolTip="Rewind"/>
            <!-- Play/Pause Button -->
            <Button x:Name="_playPauseButton" Content="▶" Style="{StaticResource ControlButtonStyle}" ToolTip="Play/Pause"/>
            <!-- Stop Button -->
            <Button x:Name="_stopButton" Content="⏹" Style="{StaticResource ControlButtonStyle}" ToolTip="Stop"/>
            <!-- Fast Forward Button -->
            <Button x:Name="_fastForwardButton" Content="⏩" Style="{StaticResource ControlButtonStyle}" ToolTip="Fast Forward"/>
            <!-- Mute Button -->
            <Button x:Name="_muteButton" Content="🔊" Style="{StaticResource ControlButtonStyle}" ToolTip="Mute"/>
            <!-- Volume Slider -->
            <local:ProgressBarView x:Name="_volumeSlider" 
                    Style="{StaticResource VolumeSliderStyle}" 
                    Value="{Binding Volume, RelativeSource={RelativeSource AncestorType=UserControl}}"
                    ToolTip="Volume"/>
            <!-- Repeat Button -->
            <Button x:Name="_repeatButton" Content="🔁" Style="{StaticResource ControlButtonStyle}" ToolTip="Repeat Mode"/>
            <!-- Equalizer Button -->
            <Button x:Name="_equalizerButton" Content="🎛" Style="{StaticResource ControlButtonStyle}" ToolTip="Equalizer"/>
        </StackPanel>

        <!-- Volume Popup -->
        <Popup x:Name="_volumePopup" 
               PlacementTarget="{Binding ElementName=_volumeSlider}" 
               Placement="Top" 
               AllowsTransparency="True"
               IsOpen="{Binding VolumePopupVisibility, RelativeSource={RelativeSource AncestorType=UserControl}}">
            <TextBlock x:Name="_volumePopupText" 
                       Text="{Binding VolumePopupText, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                       Style="{StaticResource PopupTextStyle}"/>
        </Popup>

        <!-- Playlist Popup -->
        <Popup x:Name="_playlistPopup" 
               PlacementTarget="{Binding ElementName=_openPlaylistButton}" 
               Placement="Top" 
               AllowsTransparency="True"
               IsOpen="{Binding PlaylistPopupVisibility, RelativeSource={RelativeSource AncestorType=UserControl}}">
            <Border Background="{StaticResource DarkBackgroundBrush}" 
                    BorderBrush="{StaticResource DarkOrangeBrush}" 
                    BorderThickness="1"
                    CornerRadius="5">
                <ListBox x:Name="_playlistListBox" 
                         ItemsSource="{Binding PlaylistItems, RelativeSource={RelativeSource AncestorType=UserControl}}"
                         SelectedIndex="{Binding SelectedPlaylistIndex, RelativeSource={RelativeSource AncestorType=UserControl}}"
                         Width="200" Height="150"
                         Background="{StaticResource DarkBackgroundBrush}">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem" BasedOn="{StaticResource PlaylistItemStyle}"/>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </Border>
        </Popup>

        <!-- Equalizer Popup -->
        <Popup x:Name="_equalizerPopup" 
               PlacementTarget="{Binding ElementName=_equalizerButton}" 
               Placement="Top" 
               AllowsTransparency="True"
               IsOpen="{Binding EqualizerPopupVisibility, RelativeSource={RelativeSource AncestorType=UserControl}}">
            <Border Background="{StaticResource DarkBackgroundBrush}" 
                    BorderBrush="{StaticResource DarkOrangeBrush}" 
                    BorderThickness="1"
                    CornerRadius="5"
                    Padding="10">
                <StackPanel Orientation="Horizontal">
                    <StackPanel>
                        <TextBlock Text="Bass" Foreground="{StaticResource DarkOrangeBrush}" HorizontalAlignment="Center"/>
                        <Slider x:Name="_bassSlider" 
                                Style="{StaticResource EqualizerSliderStyle}" 
                                Value="{Binding BassLevel, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="Mid" Foreground="{StaticResource DarkOrangeBrush}" HorizontalAlignment="Center"/>
                        <Slider x:Name="_midSlider" 
                                Style="{StaticResource EqualizerSliderStyle}" 
                                Value="{Binding MidLevel, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="Treble" Foreground="{StaticResource DarkOrangeBrush}" HorizontalAlignment="Center"/>
                        <Slider x:Name="_trebleSlider" 
                                Style="{StaticResource EqualizerSliderStyle}" 
                                Value="{Binding TrebleLevel, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Popup>

        <!-- Repeat Mode Popup -->
        <Popup x:Name="_repeatPopup" 
               PlacementTarget="{Binding ElementName=_repeatButton}" 
               Placement="Top" 
               AllowsTransparency="True"
               IsOpen="{Binding RepeatPopupVisibility, RelativeSource={RelativeSource AncestorType=UserControl}}">
            <Border Background="{StaticResource DarkBackgroundBrush}" 
                    BorderBrush="{StaticResource DarkOrangeBrush}" 
                    BorderThickness="1"
                    CornerRadius="5"
                    Padding="5">
                <ComboBox x:Name="_repeatComboBox"
                          Style="{StaticResource RepeatComboBoxStyle}"
                          SelectedItem="{Binding RepeatMode, RelativeSource={RelativeSource AncestorType=UserControl}}"
                          ItemsSource="{Binding RepeatModes, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
            </Border>
        </Popup>
    </Grid>
</UserControl>