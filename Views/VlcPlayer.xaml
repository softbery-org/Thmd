<vlc:VideoView x:Class="Thmd.Views.VlcPlayer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Thmd.Views"
             xmlns:vlc="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             HorizontalAlignment="Stretch" 
             VerticalAlignment="Stretch" 
             Background="Black">
    <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <local:InfoBox x:Name="_infobox" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,80,20,0" Width="auto" Height="auto" BackgroundColor="Transparent"/>
        <local:Playlist x:Name="_playlist" VerticalAlignment="Top" HorizontalAlignment="Left" Height="250"/>
        <local:ControlBar x:Name="_controlbar" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <local:SubtitleControl x:Name="_subtitle" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,35" Content="Napisy" Foreground="White"/>
        <local:KeyboardShortcutsView x:Name="_keyboardShortcuts" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <local:ProgressBarView x:Name="_progressbar" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" ProgressText="00:00:00"/>
        <local:LogoImage x:Name="_userImage" HorizontalAlignment="Right" VerticalAlignment="Top" Width="150" Height="75"  Margin="0,0,50,50"/>
    </Grid>
</vlc:VideoView>
